{
  "level": "A1",
  "title": "Fondations du suédois",
  "modules": [

    {
      "id": "pron",
      "title": "Prononciation",
      "lessons": [
        {
          "id": "a1_1",
          "title": "Premiers sons",
          "content": [
            "Le suédois possède des voyelles longues et courtes.",
            "L’accent est presque toujours sur la première syllabe.",
            "å = o ouvert, ä = è, ö = eu, y = u très fermé."
          ],
          "vocab": [
            { "sv": "hej", "fr": "salut", "pron": "hèï" },
            { "sv": "tack", "fr": "merci", "pron": "tak" },
            { "sv": "ja", "fr": "oui", "pron": "ya" },
            { "sv": "nej", "fr": "non", "pron": "nèï" }
          ],
          "quiz": {
            "type": "mcq",
            "q": "Comment dit-on merci ?",
            "choices": ["hej", "tack", "nej"],
            "answerIndex": 1
          }
        }
      ]
    },

    {
      "id": "basic",
      "title": "Phrase simple",
      "lessons": [
        {
          "id": "a1_2",
          "title": "Sujet – Verbe – Objet",
          "content": [
            "Ordre : Sujet + verbe + objet.",
            "La négation inte vient après le verbe."
          ],
          "examples": [
            { "sv": "Jag bor här.", "fr": "J’habite ici.", "pron": "yag bour hèr" },
            { "sv": "Jag bor inte här.", "fr": "Je n’habite pas ici.", "pron": "yag bour innté hèr" }
          ],
          "quiz": {
            "type": "gap",
            "q": "Jag ___ inte här.",
            "answer": "bor"
          }
        }
      ]
    },

    {
      "id": "articles",
      "title": "Articles en / ett",
      "lessons": [
        {
          "id": "a1_3",
          "title": "Genre",
          "content": [
            "Il existe deux genres : en et ett.",
            "90% des mots sont en.",
            "Article défini collé au mot : boken, huset."
          ],
          "vocab": [
            { "sv": "en bok", "fr": "un livre", "pron": "èn bouk" },
            { "sv": "ett hus", "fr": "une maison", "pron": "ètt houss" }
          ],
          "quiz": {
            "type": "mcq",
            "q": "Quel article pour bok ?",
            "choices": ["ett", "en"],
            "answerIndex": 1
          }
        }
      ]
    },

    {
      "id": "verbs",
      "title": "Verbes essentiels",
      "lessons": [
        {
          "id": "a1_4",
          "title": "vara / ha",
          "content": [
            "vara = être",
            "ha = avoir",
            "Même forme pour toutes les personnes."
          ],
          "vocab": [
            { "sv": "Jag är Alex.", "fr": "Je suis Alex.", "pron": "yag èr alèks" },
            { "sv": "Jag har kaffe.", "fr": "J’ai du café.", "pron": "yag har kafé" }
          ],
          "quiz": {
            "type": "mcq",
            "q": "Comment dire: Je suis ?",
            "choices": ["Jag har", "Jag är"],
            "answerIndex": 1
          }
        }
      ]
    }

  ]
}
